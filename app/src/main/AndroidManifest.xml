<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.restaurants.lviv.restLvivApplication">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.restaurants.lviv.restLvivApplication.UpdateActivity"
            android:parentActivityName="com.restaurants.lviv.restLvivApplication.MainActivity"/>
        <activity android:name="com.restaurants.lviv.restLvivApplication.AccountActivity"
            android:parentActivityName="com.restaurants.lviv.restLvivApplication.LoginActivity"/>
        <activity android:name="com.restaurants.lviv.restLvivApplication.RestaurantActivity"
            android:parentActivityName="com.restaurants.lviv.restLvivApplication.LoginActivity"/>
        <activity
            android:name="com.restaurants.lviv.restLvivApplication.AddActivity"
            android:label="Add Restaurant"
            android:parentActivityName="com.restaurants.lviv.restLvivApplication.MainActivity" />

        <activity android:name=".CommentsActivity" />
        <activity android:name=".RVActivity" />
        <activity
            android:name="com.restaurants.lviv.restLvivApplication.MainActivity"
            android:label="Restaurants Lviv"
            android:parentActivityName="com.restaurants.lviv.restLvivApplication.LoginActivity">
        </activity>
        <activity
            android:name="com.restaurants.lviv.restLvivApplication.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />



    </application>

</manifest>
